<?php
$tab[1]=3.14123;
$tab[2]=2.71111;
$tab[3]=100.123212;
$tab[4]=5.3453;
$tab[5]=2.54312;
$tab[6]=444.4432;
$tab[7]=132.99123;
$tab[8]=43.5313;
for($a=1;$a<=8;$a++){
$tab2[$a]=round($tab[$a]);
}
for($a=1;$a<=8;$a++){
$tab3[$a]=floor($tab[$a]);
}
for($a=1;$a<=8;$a++){
$tab4[$a]=ceil($tab[$a]);
}
for($a=1;$a<=8;$a++){
$tab5[$a]=round($tab[$a],3);
}
for($a=1;$a<=8;$a++){
$tab6[$a]=round($tab[$a],4);

}
echo "Tab wartości:\n\n";
print_r($tab);
echo "\nTab2\n";
echo "Tab do najbliższych wartosci calkowitych:\n\n";
print_r($tab2);
echo "\nTab3\n";
echo "Tab do dolu:\n\n";
