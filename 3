$tab[$b]=$a-$b;
echo "tab[".$b."] = ".$tab[$b]."\n";
}
echo "\n\n\nSORTOWANIE\n";

echo "Wartosci tab[1-1000]=1-1000:\n\n";
sort($tab);
for($b=1;$b<$a;$b++){
echo "tab[".$b."] = ".$tab[($b-1)]."\n";
}
?>
