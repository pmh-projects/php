<?php
function pole_trojkata($x,$y){
return 0.5*$x*$y;
}
$p1=10;
$w1=20;
$p2=13;
$w2=30;
$p3=210;
$w3=20;
$p4=23;
$w4=214;
$p5=1000;
$w5=1;
$p6=123;
$w6=321;
