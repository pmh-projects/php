Polecenie 8
<?php
$a = 15;
$b = 87;
$c = 6;
$d=($b*$b)-(4*$a*$c);
if($d==0){
$delta="rowna_zero";
}
if($d>0){
$delta="wieksza_od_zera";
}
if($d<0){
$delta="mniejsza_od_zera";
}
switch($delta){
case "rowna_zero":
echo "delta rowna zero\n";
$x0=-$b/(2*$a);
echo "x0 = $x0\n";

break;
case "wieksza_od_zera":
echo "delta=wieksza_od_zera\n";
$x1=(-$b-sqrt($d))/(2*$a);
$x2=(-$b+sqrt($d))/(2*$a);
echo "x1 = $x1\n";
echo "x2 = $x2\n";
break;
case "mniejsza_od_zera":
echo "delta=mniejsza_od_zera\n";
echo "Brak pierwiastkow";
break;
}
?>
